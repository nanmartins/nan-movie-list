<% if notice %>
  <div class="alert alert-info alert-dismissible shadow fade show m-1" role="alert">
    <%= notice %>
    <button type="button" class="btn-close alert-close-btn" data-bs-dismiss="alert" aria-label="Close">
    </button>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning alert-dismissible shadow fade show m-1" role="alert">
    <%= alert %>
    <button type="button" class="btn-close alert-close-btn" data-bs-dismiss="alert" aria-label="Close">
    </button>
  </div>
<% end %>
